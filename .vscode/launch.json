{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ExceptionMiddleware",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-ExceptionMiddleware",
      "program": "${workspaceFolder}/src/ExceptionMiddleware/Sandbox.Api/bin/Debug/net7.0/Sandbox.Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/ExceptionMiddleware/Sandbox.Api",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s/swagger"
      },
      "env": {
        "ASPNETCORE_URLS": "https://localhost:5050",
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    }
  ]
}
